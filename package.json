{
  "name": "apex-flow",
  "version": "1.0.0",
  "private": true,
  "description": "ApexFlow AI Document Processing Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "concurrently \"npm -w apps/api-gateway run start:dev\" \"npm -w apps/pdf-workflows run start:dev\" \"npm -w apps/slack-bot run dev\" \"npm -w apps/react-web run start\"",
    "lint": "npm run -ws lint",
    "test": "npm run -ws test",
    "test:watch": "npm run -ws test:watch",
    "test:coverage": "npm run -ws test:coverage",
    "test:e2e": "npm run -w apps/api-gateway test:e2e",
    "test:api-gateway": "npm run -w apps/api-gateway test",
    "test:api-gateway:clean": "npm run -w apps/api-gateway test:clean",
    "test:pdf-workflows": "npm run -w apps/pdf-workflows test",
    "test:agent-orchestrator": "npm run -w apps/agent-orchestrator test",
    "test:slack-bot": "npm run -w apps/slack-bot test",
    "test:react-web": "npm run -w apps/react-web test",
    "test:ci": "npm run -ws test -- --ci --coverage --watchAll=false --testResultsProcessor=jest-junit",
    "test:ci:reports": "npm run -ws test -- --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "setup:env": "./scripts/setup-env.sh",
    "db:start": "docker run -d -p 27017:27017 --name apexflow-mongo mongo:latest && docker run -d -p 6379:6379 --name apexflow-redis redis:alpine",
    "db:stop": "docker stop apexflow-mongo apexflow-redis",
    "db:clean": "docker rm apexflow-mongo apexflow-redis",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "form-data": "^4.0.4",
    "husky": "^8.0.3",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.3",
    "node-fetch": "^2.7.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
} 
