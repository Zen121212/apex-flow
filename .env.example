# =================================================================
# ApexFlow Environment Configuration Template
# Copy this file to .env and replace with your actual values
# =================================================================

# Database Configuration
MONGO_URI=mongodb://localhost:27017/apexflow
REDIS_URL=redis://localhost:6379

# File Storage (MinIO/AWS S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=apexflow-dev
S3_REGION=us-east-1

# Security & Authentication
JWT_SECRET=your-super-secure-jwt-secret-here

# AI/ML Service API Keys (REPLACE WITH REAL KEYS)
OPENAI_API_KEY=sk-your-openai-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# Slack Integration (GET FROM SLACK APP SETTINGS)
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Service Ports
API_GATEWAY_PORT=3000
SLACK_BOT_PORT=3001
AGENT_ORCHESTRATOR_PORT=3002

# AI Services
VISUAL_AI_SERVICE_URL=http://localhost:8000
ENABLE_NER_MODEL=false

# Environment
NODE_ENV=development
LOG_LEVEL=info
