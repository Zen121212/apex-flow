# Local Development Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/apexflow
MONGO_URI=mongodb://localhost:27017/apexflow

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Hugging Face Configuration
HF_CACHE_DIR=/Users/Zen/Desktop/ApexFlow/.hf-cache
ZSC_QUANTIZED=false
OCR_MAX_PAGES=3
OCR_SCALE=2.0

# JWT Configuration (for auth)
JWT_SECRET=your-local-jwt-secret-key
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your-local-session-secret

# File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_DEST=./uploads

# Logging
LOG_LEVEL=debug

# Development flags
ENABLE_CORS=true
TRUST_PROXY=false
